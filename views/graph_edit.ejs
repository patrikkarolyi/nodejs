<% include header %>

<h1>Edit Graph</h1>

<div class="container">
    <div class="row">
        <div class="col-md-push-3 col-md-6 col-xs-12">
            <h2>Vertices</h2>
            <table class="table table-stripped">
                <tbody>
                    <% data.vertices.forEach(function(vertex){ %>
                    <tr>
                        <td>
                            <%= vertex.name %>
                        </td>
                        <td class="text-right">
                            <a href= <%= "/graphs/" +"3"+ "/edit/vertices/"+vertex._id+"/delete" %>  class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="container">
                <form class="form-horizontal" method="POST" action=<%="/graphs/"+  "3"  + "/edit/vertices/new" %>>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input name="vertexname" type="text" class="form-control" placeholder="Enter the name of the vertex">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <button class="btn btn-lg btn-success">New vertex</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-push-3 col-md-6 col-xs-12">
            <h2>Edges</h2>
            <table class="table table-stripped">
                <tbody>
                    <% data.edgeModel.forEach(function(edge){ %>
                    <tr>
                        <td>
                            <%= "data.vertices[0].name" %>
                        </td>
                        <td>
                            <%= "data.vertices[0].name" %>
                        </td>
                        <td class="text-right">
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="container">
                <form class="form-horizontal" method="POST" action=<%="/graphs/"+  "3"  + "/edit/edges/new" %> >
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-5">
                                <select class="custom-select d-block w-100" name=selectora id="vertexa">
                                    <% data.vertices.forEach(function(vertex){ %>
                                    <option value=<%=vertex._id %>>
                                        <%= vertex.name %>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-5">
                                <select class="custom-select d-block w-100" name=selectorb id="vertexb">
                                    <% data.vertices.forEach(function(vertex){ %>
                                    <option value=<%=vertex._id %>>
                                        <%= vertex.name %>
                                    </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <button class="btn btn-lg btn-success">New edge</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <a class="btn btn-sm btn-warning" href="../../">Go Back</button>
    <% include footer %>